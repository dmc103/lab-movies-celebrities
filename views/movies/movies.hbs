<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>List of all Movies</title>
  </head>
  <body>
    <h1>List of all movies</h1>

    <ul>
      {{#each movies}}
      <div class="movie">
        <a href="/movies/{{this._id}}">{{this.title}}<a>
        </div>
      {{/each}}
    </ul>

    <a href="/">Back to Home</a>
    <br />
    <a href="/movies/create">Add new Movie</a>

  </body>
</html>