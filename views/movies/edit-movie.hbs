<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit movie</title>
  </head>
  <body>
    <h2>Edit Movies</h2>

    <form action="/movies/{{movie._id}}" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" value="{{movie.title}}" />

      <label for="genre">Genre:</label>
      <input type="text" name="genre" value="{{movie.genre}}" />

      <label for="plot">Plot:</label>
      <input type="text" name="plot" value="{{movie.plot}}" />

      <label for="cast">Cast:</label>
      <select name="cast" multiple required>
        {{#each celebrities}}
        <option value="{{this._id}}" {{#if this.selected}}selected{{/if}}>{{this.name}}</option>
        {{/each}}
      </select>

      <button type="submit">Save Changes</button>

    </form>

    <a href="/movies/{{movie._id}}">Back to Movie info</a>

  </body>
</html>